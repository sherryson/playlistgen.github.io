CREATE SCHEMA music_project;
USE music_project;

CREATE TABLE artistsAlbum (
  artistsname VARCHAR(100) NOT NULL,
  albumname VARCHAR(100) NOT NULL,
  year INT NOT NULL,
  PRIMARY KEY(artistsname)
) engine=InnoDB;

CREATE TABLE pop (
  artistsname VARCHAR(100) NOT NULL REFERENCES artistsAlbum(artistsname),
  albumname VARCHAR(100) NOT NULL REFERENCES artistsAlbum(albumname),
  PRIMARY KEY(artistsname, albumname)
) engine=InnoDB;

CREATE TABLE electronic (
  artistsname VARCHAR(100) NOT NULL REFERENCES artistsAlbum(artistsname),
  albumname VARCHAR(100) NOT NULL REFERENCES artistsAlbum(albumname),
  PRIMARY KEY(artistsname, albumname)
) engine=InnoDB;

CREATE TABLE country (
  artistsname VARCHAR(100) NOT NULL REFERENCES artistsAlbum(artistsname),
  albumname VARCHAR(100) NOT NULL REFERENCES artistsAlbum(albumname),
  PRIMARY KEY(artistsname, albumname)
) engine=InnoDB;

CREATE TABLE hipHopRap (
  artistsname VARCHAR(100) NOT NULL REFERENCES artistsAlbum(artistsname),
  albumname VARCHAR(100) NOT NULL REFERENCES artistsAlbum(albumname),
  PRIMARY KEY(artistsname, albumname)
) engine=InnoDB;

CREATE TABLE songs (
  sname VARCHAR(100),
  artistsname VARCHAR(100) NOT NULL,
  runtime time NOT NULL,
  PRIMARY KEY (sname, artistsname)
) engine=InnoDB;

ALTER TABLE songs 
	ADD FOREIGN KEY (artistsname) REFERENCES artistsAlbum(artistsname) ON UPDATE CASCADE;

CREATE TABLE playlists (
  pname VARCHAR(20) NOT NULL,
  sname VARCHAR(100),
  PRIMARY KEY (pname)
) engine=InnoDB;

ALTER TABLE playlists
	ADD FOREIGN KEY (sname) REFERENCES songs(sname);

select * from songs;
select * from artistsAlbum;
select * from pop;
select * from electronic;
select * from country;
select * from hiphopRap;
select * from playlists;
